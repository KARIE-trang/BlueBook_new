<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thêm Khách Hàng - BlueBook</title>

    <!-- CSS chung -->
    <link rel="stylesheet" href="/admin/css/home.css" />
    <link rel="stylesheet" href="/admin/css/QL_users/add_user.css" />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <!-- SIDEBAR -->
    <aside class="sidebar">
      <div class="brand">
        <span class="logo-text">BlueBook</span>
      </div>

      <div class="logo-divider"></div>

      <nav class="menu">
        <a href="/admin/home" class="menu-item">
          <i class="fa-solid fa-chart-line"></i> Dashboard
        </a>

        <div class="menu-group">
          <button class="menu-item dropdown-btn">
            <div class="menu-left">
              <i class="fa-solid fa-book"></i>
              <span>Sách</span>
            </div>
            <i class="fa-solid fa-chevron-down arrow"></i>
          </button>

          <div class="dropdown">
            <a href="/admin/quanlysach" class="menu-sub">
              <i class="fa-solid fa-list"></i> Danh sách sách
            </a>
            <a href="/admin/theloai" class="menu-sub">
              <i class="fa-solid fa-shapes"></i> Thể loại</a
            >
            <a href="/admin/thongke-tonkho" class="menu-sub">
              <i class="fa-solid fa-chart-column"></i> Thống kê tồn kho</a
            >
          </div>
        </div>

        <a href="/quanlykhachhang" class="menu-item active">
          <i class="fa-solid fa-users"></i> Khách hàng
        </a>

        <a href="/admin/quanlydonhang" class="menu-item">
          <i class="fa-solid fa-file-invoice"></i> Đơn hàng
        </a>

        <a href="/admin/doanhthu?preset=today" class="menu-item">
          <i class="fa-solid fa-coins"></i> Doanh thu
        </a>

        <a href="/logout" class="menu-item logout">
          <i class="fa-solid fa-right-from-bracket"></i> Đăng xuất
        </a>
      </nav>
    </aside>

    <!-- TOPBAR -->
    <header class="topbar">
      <div class="top-right">
        <div class="user-box">
          <i class="fa-solid fa-user"></i>
          <span class="user-name">Admin</span>
          <span class="role">Quản trị viên</span>
        </div>
      </div>
    </header>

    <!-- MAIN -->
    <main class="main">
      <!-- header nhỏ cho trang -->
      <div class="page-header">
        <div>
          <h1 class="page-title">Thêm Khách Hàng</h1>
          <p class="page-subtitle">
            Nhập thông tin để tạo mới một tài khoản khách hàng trên hệ thống.
          </p>
        </div>

        <a href="/quanlykhachhang" class="back-link">
          <i class="fa-solid fa-arrow-left"></i>
          Quay lại danh sách
        </a>
      </div>

      <div class="user-card">
        <h2 class="form-title">
          <i class="fa-solid fa-user-plus"></i> Thông tin khách hàng
        </h2>

        <form action="/add_user" method="POST" class="form-add-user">
          <!-- hàng 1: tài khoản + mật khẩu -->
          <div class="form-row">
            <div class="form-group">
              <label>Tài khoản <span class="required">*</span></label>
              <input
                type="text"
                name="taikhoan"
                placeholder="Nhập tài khoản..."
                required
              />
              <small class="hint">
                Dùng để đăng nhập, không trùng với tài khoản đã tồn tại.
              </small>
            </div>

            <div class="form-group">
              <label>Mật khẩu <span class="required">*</span></label>
              <input
                type="password"
                name="matkhau"
                placeholder="Nhập mật khẩu..."
                required
              />
              <small class="hint">Nên từ 6 ký tự trở lên.</small>
            </div>
          </div>

          <!-- hàng 2: họ tên + email -->
          <div class="form-row">
            <div class="form-group">
              <label>Họ tên <span class="required">*</span></label>
              <input
                type="text"
                name="hoten"
                placeholder="Nhập họ tên..."
                required
              />
            </div>

            <div class="form-group">
              <label>Email <span class="required">*</span></label>
              <input
                type="email"
                name="email"
                placeholder="Nhập email..."
                required
              />
              <small class="hint">
                Email dùng để nhận thông báo và hỗ trợ khôi phục mật khẩu.
              </small>
            </div>
          </div>

          <!-- thông báo lỗi -->
          <% if (error == 2) { %>
          <p class="error-msg">
            ⚠️ Tài khoản hoặc email đã được sử dụng. Vui lòng chọn thông tin
            khác.
          </p>
          <% } %>

          <!-- nút -->
          <div class="form-buttons">
            <a href="/quanlykhachhang" class="btn-cancel">Hủy</a>
            <button type="submit" class="btn-submit">
              <i class="fa-solid fa-plus"></i>
              Thêm khách hàng
            </button>
          </div>
        </form>
      </div>
    </main>

    <script>
      const btn = document.querySelector(".dropdown-btn");
      const drop = document.querySelector(".dropdown");
      const arrow = document.querySelector(".arrow");

      btn.addEventListener("click", () => {
        drop.classList.toggle("show");
        arrow.classList.toggle("rotate");
      });
    </script>
  </body>
</html>
