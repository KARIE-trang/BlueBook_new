<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thêm Sách Mới - BlueBook</title>

    <!-- CSS chung -->
    <link rel="stylesheet" href="/admin/css/home.css" />
    <link rel="stylesheet" href="/admin/css/QL_sach/add_sach.css" />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <!-- SIDEBAR -->
    <aside class="sidebar">
      <div class="brand">
        <span class="logo-text">BlueBook</span>
      </div>

      <div class="logo-divider"></div>

      <nav class="menu">
        <a href="/admin/home" class="menu-item">
          <i class="fa-solid fa-chart-line"></i> Dashboard
        </a>

        <div class="menu-group">
          <button class="menu-item dropdown-btn active">
            <div class="menu-left">
              <i class="fa-solid fa-book"></i>
              <span>Sách</span>
            </div>
            <i class="fa-solid fa-chevron-down arrow rotate"></i>
          </button>

          <div class="dropdown show">
            <a href="/admin/quanlysach" class="menu-sub">
              <i class="fa-solid fa-list"></i> Danh sách sách</a
            >
            <a href="/admin/theloai" class="menu-sub">
              <i class="fa-solid fa-shapes"></i> Thể loại</a
            >
            <a href="/admin/thongke-tonkho" class="menu-sub">
              <i class="fa-solid fa-chart-column"></i> Thống kê tồn kho</a
            >
          </div>
        </div>

        <a href="/quanlykhachhang" class="menu-item">
          <i class="fa-solid fa-users"></i> Khách hàng
        </a>

        <a href="/admin/quanlydonhang" class="menu-item">
          <i class="fa-solid fa-file-invoice"></i> Đơn hàng
        </a>

        <a href="/admin/doanhthu?preset=today" class="menu-item">
          <i class="fa-solid fa-coins"></i> Doanh thu
        </a>

        <a href="/logout" class="menu-item logout">
          <i class="fa-solid fa-right-from-bracket"></i> Đăng xuất
        </a>
      </nav>
    </aside>

    <!-- TOPBAR -->
    <header class="topbar">
      <div class="top-right">
        <div class="user-box">
          <i class="fa-solid fa-user"></i>
          <span class="user-name">Admin</span>
          <span class="role">Quản trị viên</span>
        </div>
      </div>
    </header>

    <!-- MAIN -->
    <main class="main">
      <!-- header + back link -->
      <div class="page-header">
        <div>
          <h1 class="page-title">Thêm Sách Mới</h1>
          <p class="page-subtitle">
            Nhập thông tin để thêm một đầu sách mới vào hệ thống.
          </p>
        </div>

        <a href="/admin/quanlysach" class="back-link">
          <i class="fa-solid fa-arrow-left"></i>
          Quay lại danh sách
        </a>
      </div>

      <section class="form-card">
        <h2 class="form-title">
          <i class="fa-solid fa-book-medical"></i> Thông tin sách
        </h2>

        <form
          action="/admin/add_book"
          method="POST"
          enctype="multipart/form-data"
          class="book-form"
        >
          <div class="form-grid">
            <!-- TÊN SÁCH -->
            <div class="form-group">
              <label>Tên Sách <span class="required">*</span></label>
              <input
                type="text"
                name="tensach"
                placeholder="Nhập tên sách..."
                required
              />
            </div>

            <!-- TÁC GIẢ -->
            <div class="form-group">
              <label>Tác Giả <span class="required">*</span></label>
              <input
                type="text"
                name="tentacgia"
                placeholder="Nhập tên tác giả..."
                required
              />
            </div>

            <!-- NGÀY PHÁT HÀNH -->
            <div class="form-group">
              <label>Ngày phát hành <span class="required">*</span></label>
              <input type="date" name="ngayphathanh" required />
            </div>

            <!-- GIÁ BÁN -->
            <div class="form-group">
              <label>Giá bán (VNĐ) <span class="required">*</span></label>
              <input
                type="number"
                name="giaban"
                min="0"
                step="1000"
                placeholder="vd: 120000"
                required
              />
              <small class="hint">Đơn vị: VNĐ</small>
            </div>

            <!-- TỒN KHO -->
            <div class="form-group">
              <label>Tồn kho <span class="required">*</span></label>
              <input
                type="number"
                name="sl_tonkho"
                min="0"
                step="1"
                placeholder="vd: 50"
                required
              />
            </div>

            <!-- THỂ LOẠI -->
            <div class="form-group">
              <label>Thể loại <span class="required">*</span></label>
              <select name="matheloai" required>
                <option value="">-- Chọn thể loại --</option>
                <% theloai.forEach(t => { %>
                <option value="<%= t.matheloai %>"><%= t.tentheloai %></option>
                <% }) %>
              </select>
            </div>

            <!-- MÔ TẢ (FULL WIDTH) -->
            <div class="form-group full">
              <label>Mô tả</label>
              <textarea
                name="mota"
                rows="4"
                placeholder="Nhập mô tả ngắn về sách..."
              ></textarea>
            </div>

            <!-- ẢNH BÌA (FULL WIDTH) -->
            <div class="form-group full">
              <label>Ảnh bìa sách <span class="required">*</span></label>

              <label class="upload-btn">
                <i class="fa-solid fa-upload"></i> Chọn ảnh
                <input
                  type="file"
                  name="hinhanh"
                  accept="image/*"
                  id="hinhanh"
                  required
                />
              </label>

              <div id="preview-box">
                <img id="preview-img" />
              </div>
            </div>
          </div>

          <div class="button-group">
            <a href="/admin/quanlysach" class="btn-secondary">Hủy</a>
            <button class="btn-primary" type="submit">
              <i class="fa-solid fa-plus"></i> Lưu sách
            </button>
          </div>
        </form>
      </section>
    </main>

    <script>
      // preview ảnh bìa
      const inputImage = document.getElementById("hinhanh");
      const previewBox = document.getElementById("preview-box");
      const previewImg = document.getElementById("preview-img");

      inputImage.addEventListener("change", function () {
        const file = this.files[0];
        if (file) {
          previewImg.src = URL.createObjectURL(file);
          previewBox.style.display = "block";
        } else {
          previewBox.style.display = "none";
        }
      });

      // dropdown sidebar
      const btn = document.querySelector(".dropdown-btn");
      const drop = document.querySelector(".dropdown");
      const arrow = document.querySelector(".arrow");
      if (btn) {
        btn.addEventListener("click", () => {
          drop.classList.toggle("show");
          arrow.classList.toggle("rotate");
        });
      }
    </script>
  </body>
</html>
